<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.muyu.manager.dao.BaseUserDAO">
    <resultMap id="BaseUserResultMap"
               type="com.muyu.manager.domain.BaseUserDO">
        <id column="user_id" property="userId" jdbcType="BIGINT" />
        <result column="login_name" property="loginName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="column-all">
        user_id,login_name,password
    </sql>

    <select id="getById" resultMap="BaseUserResultMap" parameterType="java.lang.Long">
        select <include refid="column-all"/>
        from base_user
        where user_id=${value}
    </select>

    <insert id="save">
        insert into base_user(login_name,password) values(#{loginName},#{password})
        <selectKey resultType="java.lang.Long" keyProperty="userId">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="getByUserName" parameterType="java.lang.String">
        select <include refid="column-all"/>
        from base_user
        where user_name=${value}
    </select>
</mapper>

